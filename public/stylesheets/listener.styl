body#listen
    transition          .1s background-color linear
    background          url('/images/noise.png') repeat, url('/images/background-left.svg') no-repeat top left, url('/images/background-right.svg') no-repeat top right
    background-color    $color-relief
    background-size     cover
    height              100%
    &.hit_1
        background-color lighten($color-accent, 50%)
    &.hit_2
        background-color lighten($color-accent, 20%)
    &.hit_3
        background-color $color-accent
    &.hit_4
        background-color darken($color-accent, 40%)
    &.hit_5
        background-color darken($color-accent, 80%)
    &.hit
        #victim
            background-color        white
            .img
                opacity             0


#listener
    height                  100%
    // Image Definition
    p.background
        background-color    $color-relief

    #victim
        transition          .1s opacity linear
        position            relative
        background-color    $color-relief
        border              5px solid $color-accent2
        margin-top          25px
        margin-bottom       35px
        outline             7px solid $color-accent
        height              350px

        &:before
            content         ''
            z-index         -1
            top             -18px
            left            -18px
            border          18px solid $color-accent2
            position        absolute
            width           100%
            height          100%

        p
            color           $color-relief2
            padding-top     140px
            font-size       2em

        .details .filename, .details .size, .progress, .success-mark, .error-mark, .error-message
            display         none
            top             0

        .img
            transition      .1s opacity linear
            position        absolute
            opacity         1
            background-size cover
            background-color transparent
            width           100%
            height          100%
            top             0

        &.loading
            .img
                background-position center center
                background-size     auto
                background-repeat   no-repeat



    // Social Garbage
    .btn.social
        float               right
        margin-bottom       15px
        margin-right        10px
        i
            margin-right    10px
    .icon-twitter
        background          url('/images/twitter.png') no-repeat
    .icon-facebook
        background          url('/images/facebook.png') no-repeat
    #facebook-kinect
        border-radius       0
        position            absolute
        bottom              0
        left                0
        margin              0
        padding             10px 0
        border-left         0
        border-right        0
        width               100%


    // Code Stuff
    .code-info
        margin-top          20px
    #code
        font-size           2.5em
        text-align          center
        color               $color-accent
        text-shadow         0 1px 0px $color-accent2


// Friend Picker
#friend-picker
    background              $color-relief url('/images/noise.png') repeat

    .modal-header
        border-bottom       1px solid darken($color-relief, 10)
    .modal-body
        max-height          none
    #friends
        max-height          400px
        overflow-y          auto
        overflow-x          hidden
    li.friend
        overflow            hidden
        margin              0 -15px
        list-style-type     none
        padding             5px 0
        &:hover
            background-color darken($color-relief, 10)
            cursor          pointer
        img
            margin-left     15px
            margin-right    15px
            float           left
            border          3px solid $color-accent
            background-color $color-accent2
            padding         3px
        h4
            text-align      left
            font-family     $font-primary
            color           $color-primary
            text-shadow     none
    input
        width               97%
        border              1px solid darken($color-relief, 10)
        background-color    lighten($color-relief, 10)
    .dropdown-menu
        border              1px solid darken($color-relief, 10)
        background-color    lighten($color-relief, 10)
        .active
            a
                background-image linear-gradient(to bottom, $color-primary, darken($color-primary, 10));
                background-color $color-primary

@media (max-width: 767px)
    #listener
        width               75%
        margin-left         auto
        margin-right        auto
