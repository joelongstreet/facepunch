body
    transition          .1s background-color linear
    &.hit_1
        background-color lighten($color-accent, 50%)
    &.hit_2
        background-color lighten($color-accent, 20%)
    &.hit_3
        background-color $color-accent
    &.hit_4
        background-color darken($color-accent, 40%)
    &.hit_5
        background-color darken($color-accent, 80%)

#listener
    #victim
        position            relative
        background-color    $color-relief
        border              5px solid $color-accent2
        margin-top          25px
        margin-bottom       50px
        outline             7px solid $color-accent
        height              450px
        position            relative

        &:before
            content         ''
            z-index         -1
            top             -18px
            left            -18px
            border          18px solid $color-accent2
            position        absolute
            width           100%
            height          100%

        p
            color           $color-relief2
            padding-top     180px
            font-size       2em

        .details .filename, .details .size, .progress, .success-mark, .error-mark, .error-message
            display         none
            top             0

        img
            position        absolute
            width           100%
            top             0


    .code-info
        margin-top          20px

    #code
        font-size           2.5em
        text-align          center
        color               $color-accent
        text-shadow         0 1px 0px $color-accent2